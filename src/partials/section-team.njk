<section class="light-bg team" id="team">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <img class="separator" src="/img/pulse-separator.png" alt="pulse site separator">
                <h2 class="section-heading text-uppercase">Our team</h2>
            </div>
        </div>
        <div class="row">

            {% for teamMember in team.members %}

                <div class="col-xl-4 col-lg-6 team-member">
                    <div class="team-member-info">
                        <img class="mx-auto rounded-circle" src="{{ teamMember.avatar }}" alt="{{ teamMember.name }}">
                        <h3 class="col-heading">{{ teamMember.displayName | safe }}</h3>
                        <h4>{{ teamMember.role }}</h4>
                        <p class="team-member-description">{{ teamMember.description }}</p>
                    </div>
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a href="{{ teamMember.linkedin }}" target="_blank"
                               aria-label="Go to team member Linkedin">
                                <i class="fab fa-2x fa-linkedin-in"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            {% endfor %}

        </div>

        <!--advisors-->

        <div class="row">
            <div class="col-xl-12 text-center">
                <img class="separator img-fluid" src="/img/shining_line.png" alt="line site separator"
                     aria-label="Go to team member Linkedin">
                <h2 class="section-heading text-uppercase">Our advisors</h2>
            </div>
        </div>

        <div class="row">

            {% for advisor in team.advisors %}

                <div class="col-xl-4 col-lg-6 team-member">
                    <div class="team-member-info">
                        <img class="mx-auto rounded-circle" src="{{ advisor.avatar }}" alt="{{ advisor.name }}">
                        <h3 class="col-heading">{{ advisor.displayName | safe }}</h3>
                        <h4>{{ advisor.role }}</h4>
                        <p class="team-member-description">{{ advisor.description }}</p>
                    </div>
                    <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                            <a href="{{ advisor.linkedin }}" target="_blank"
                               aria-label="Go to team member Linkedin">
                                <i class="fab fa-2x fa-linkedin-in"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            {% endfor %}

        </div>
       
    </div>
</section>