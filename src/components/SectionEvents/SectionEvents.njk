<section id="events" class="light-bg section-events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">EVENTS</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid section-events__media-container">

        {% for article in events %}
            <div>
                <a target="_blank" href="{{ article.url }}" class="section-events__media">
                    <img class="section-events__media-img" src="{{ article.image }}" />
                    <span>{{ article.title }}</span>
                </a>
            </div>
        {% endfor %}

    </div>
</section>

