<section class="faq-section" id="faq">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">FAQ</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <dl class="faq-items">
                    {% for entry in faq %}
                        <dt data-toggle="collapse" class="faq-question collapsed" data-target="#{{ entry.id }}">
                            {{ entry.question }}
                        </dt>
                        <dd id="{{ entry.id }}" class="faq-answer collapse">
                            {{ entry.answer | safe }}
                        </dd>
                    {% endfor %}
                </dl>
            </div>
        </div>
    </div>
</section>
